{
  "manifest_version": 2,
  "name": "Vault Token Updater",
  "version": "1.0",
  "description": "Updates vault tokens in config files",
  "permissions": ["clipboardWrite"],
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Vault Token Updater"
  },
  "content_security_policy": "script-src 'self' 'unsafe-inline'; object-src 'self'"
}